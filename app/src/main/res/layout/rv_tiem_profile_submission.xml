<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/problem_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="36dp">

    <TextView
        android:id="@+id/submission_question"
        android:text="Two Sum"
        android:textSize="12sp"
        android:layout_weight="1"
        android:textColor="@color/problem_menu_dark"
        android:paddingLeft="22dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/submission_status"
        android:text="Accepted"
        android:textSize="12sp"
        android:layout_weight="1"
        android:textColor="@color/accept"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/submission_runtime"
        android:text="10 ms"
        android:textSize="12sp"
        android:layout_weight="1"
        android:textColor="@color/problem_menu_dark"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/submission_language"
        android:text="java"
        android:textSize="12sp"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:textColor="@color/problem_menu_dark"
        android:layout_gravity="center_vertical"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

</LinearLayout>