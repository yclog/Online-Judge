<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.graduation.appletree.onlinejudge.view.CircleImageView
            android:id="@+id/rank_avatar"
            android:src="@drawable/hugh"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/home_rank_no.1"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/rank_nickname"
            android:text="nickname"
            android:textSize="14sp"
            android:textColor="@color/textDarkPrimary"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/rank_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/rank_grade"
            android:text="666"
            android:textSize="16sp"
            android:textColor="@color/rank_grade"
            android:layout_toLeftOf="@id/rank_num"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rank_num"
            android:text="No.1"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/textDarkPrimary"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</merge>