<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/problem_detail_title"
                android:text="1.Two Sum"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/problem_title_text"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/problem_description"
                    android:padding="3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:text="Description:"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/problem_title_text"
                    android:layout_marginLeft="44dp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <ImageView
                android:src="@drawable/shadow_dash_line"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"></ImageView>

            <TextView
                android:id="@+id/problem_detail_description"
                android:textStyle="bold"
                android:textColor="@color/problem_content_text"
                android:text="@string/problem_content_sample"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Example:"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/problem_title_text"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:background="@drawable/problem_shadow_border"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/problem_detail_example"
                    android:text="@string/problem_example_sample"
                    android:textColor="@color/problem_content_text"
                    android:paddingLeft="9dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/problem_solution"
                    android:padding="4dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:text="Solution:"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/problem_title_text"
                    android:layout_marginLeft="44dp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/problem_shadow_border"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/problem_detail_solution"
                    android:textColor="@color/problem_content_text"
                    android:paddingLeft="9dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>