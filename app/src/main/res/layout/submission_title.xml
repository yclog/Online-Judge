<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/problem_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="36dp">

    <TextView
        android:id="@+id/submission_title_question"
        android:text="Question"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_weight="1"
        android:textColor="@color/problem_menu_dark"
        android:paddingLeft="22dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/submission_title_status"
        android:text="Status"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@color/problem_menu_dark"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/submission_title_runtime"
        android:text="Runtime"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@color/problem_menu_dark"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/submission_title_language"
        android:text="Language"
        android:textSize="14sp"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:textStyle="bold"
        android:textColor="@color/problem_menu_dark"
        android:layout_gravity="center_vertical"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

</LinearLayout>