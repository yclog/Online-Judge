<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.graduation.appletree.onlinejudge.view.CircleImageView
            android:id="@+id/rv_discuss_post_avatar"
            android:src="@drawable/hugh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/menuWhite"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/rv_discuss_post_nickname"
            android:text="nickname"
            android:textSize="12sp"
            android:textColor="@color/textDarkPrimary"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/rv_discuss_post_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/rv_discuss_post_title"
            android:text="Title"
            android:textSize="12sp"
            android:textColor="@color/textDarkPrimary"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/rv_discuss_post_nickname"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rv_discuss_post_brief"
        android:background="@drawable/shadow_border"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="78dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="26dp">

        <TextView
            android:id="@+id/rv_discuss_tag_one"
            android:text="Java"
            android:textSize="8sp"
            android:textColor="@color/textWhite"
            android:background="@drawable/style_tag"
            android:layout_width="28dp"
            android:paddingLeft="5dp"
            android:layout_height="12dp"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/rv_discuss_tag_two"
            android:text="Python"
            android:textSize="8sp"
            android:textColor="@color/textWhite"
            android:background="@drawable/style_tag"
            android:layout_width="34dp"
            android:paddingLeft="4dp"
            android:layout_height="12dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/rv_discuss_tag_one"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/rv_discuss_tag_three"
            android:text="C/C++"
            android:textSize="8sp"
            android:textColor="@color/textWhite"
            android:background="@drawable/style_tag"
            android:layout_width="32dp"
            android:paddingLeft="4dp"
            android:layout_height="12dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/rv_discuss_tag_two"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/discuss_star"
            android:src="@mipmap/thumb"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/discuss_comment"
            android:layout_marginRight="12dp"
            android:paddingTop="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="3dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <ImageView
            android:id="@+id/discuss_comment"
            android:src="@mipmap/comment"
            android:paddingTop="6dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>