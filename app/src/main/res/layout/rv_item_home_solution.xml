<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.graduation.appletree.onlinejudge.view.CircleImageView
            android:id="@+id/rv_home_solution_avatar"
            android:src="@drawable/hugh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/menuWhite"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/rv_home_solution_nickname"
            android:text="nickname"
            android:textSize="12sp"
            android:textColor="@color/textDarkPrimary"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/rv_home_solution_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:text="Title"
            android:textSize="12sp"
            android:textColor="@color/textDarkPrimary"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/rv_home_solution_nickname"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/rv_home_solution_brief"
        android:background="@drawable/shadow_border"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="78dp" />
</merge>