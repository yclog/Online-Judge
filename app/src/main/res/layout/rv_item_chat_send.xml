<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.graduation.appletree.onlinejudge.view.CircleImageView
        android:id="@+id/rv_chat_send_avatar"
        android:src="@drawable/avatar_one"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/circle_image_border_white" />

    <TextView
        android:id="@+id/rv_chat_send_text"
        android:text="Hey , Girl"
        android:textSize="14sp"
        android:background="@drawable/chat_send_style"
        android:textColor="@color/textWhite"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_toLeftOf="@+id/rv_chat_send_avatar"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>