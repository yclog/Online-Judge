<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="4dp"
    android:background="@color/titlebarDark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/chat_vp_one"
        android:layout_weight="1"
        android:layout_width="140dp"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/chat_vp_one_icon"
            android:src="@mipmap/chat_vp_one_active"
            android:padding="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <View
            android:id="@+id/chat_vp_one_line"
            android:background="@color/chat_vp_active"
            android:layout_marginLeft="24dp"
            android:layout_alignParentBottom="true"
            android:layout_width="30dp"
            android:layout_height="2dp"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_vp_two"
        android:layout_weight="1"
        android:layout_width="140dp"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/chat_vp_two_icon"
            android:src="@mipmap/chat_vp_two"
            android:padding="1dp"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <View
            android:id="@+id/chat_vp_two_line"
            android:background="@color/chat_vp"
            android:layout_marginLeft="24dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_height="2dp"></View>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_vp_three"
        android:layout_weight="1"
        android:layout_width="140dp"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/chat_vp_three_icon"
            android:src="@mipmap/chat_vp_three"
            android:padding="6dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <View
            android:id="@+id/chat_vp_three_line"
            android:background="@color/chat_vp"
            android:layout_marginLeft="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_width="30dp"
            android:layout_height="2dp"></View>
    </RelativeLayout>


</LinearLayout>